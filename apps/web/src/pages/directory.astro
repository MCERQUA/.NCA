---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ContractorCard } from '../components/ContractorCard';
import { mockContractors, categories } from '../data/contractors';
import { Button } from '../components/ui/Button';

// Get query parameters from URL
const url = new URL(Astro.request.url);
const categoryParam = url.searchParams.get('category')?.toLowerCase() || '';
const locationParam = url.searchParams.get('location')?.toLowerCase() || '';

// Filter contractors based on search params
let filteredContractors = mockContractors;

if (categoryParam) {
  filteredContractors = filteredContractors.filter(contractor =>
    contractor.category.toLowerCase().includes(categoryParam) ||
    contractor.specialties.some(s => s.toLowerCase().includes(categoryParam))
  );
}

if (locationParam) {
  filteredContractors = filteredContractors.filter(contractor =>
    contractor.location.toLowerCase().includes(locationParam)
  );
}
---

<BaseLayout title="Contractor Directory - National Contractor Association">
  <Header />

  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-white border-b py-12 px-4">
      <div class="container mx-auto max-w-7xl">
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-charcoal mb-4">
          Find Trusted Contractors
        </h1>
        <p class="text-xl text-slate max-w-3xl">
          Browse our directory of verified, licensed contractors across all trades and locations.
        </p>
      </div>
    </section>

    <!-- Search & Filter Section -->
    <section class="py-8 px-4 bg-white border-b">
      <div class="container mx-auto max-w-7xl">
        <div class="flex flex-col lg:flex-row gap-4">
          <!-- Search Bar -->
          <div class="flex-1">
            <div class="relative">
              <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <input
                type="text"
                placeholder="Search by company name or service..."
                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              />
            </div>
          </div>

          <!-- Category Filter -->
          <div class="lg:w-64">
            <select class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary">
              <option value="">All Categories</option>
              {categories.map(cat => (
                <option value={cat.toLowerCase()}>{cat}</option>
              ))}
            </select>
          </div>

          <!-- Location Filter -->
          <div class="lg:w-64">
            <input
              type="text"
              placeholder="City, State, or ZIP"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>

          <Button client:load size="lg" className="lg:w-auto">
            Search
          </Button>
        </div>
      </div>
    </section>

    <!-- Results Section -->
    <section class="py-12 px-4">
      <div class="container mx-auto max-w-7xl">
        <!-- Results Header -->
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-2xl font-heading font-bold text-charcoal mb-1">
              {categoryParam || locationParam ? 'Search Results' : 'All Contractors'}
            </h2>
            <p class="text-slate">
              Showing {filteredContractors.length} verified contractor{filteredContractors.length !== 1 ? 's' : ''}
              {categoryParam && <span> for "{categoryParam}"</span>}
              {locationParam && <span> in "{locationParam}"</span>}
            </p>
          </div>

          <!-- Sort Options -->
          <div class="hidden md:flex items-center space-x-2">
            <span class="text-sm text-slate">Sort by:</span>
            <select class="px-3 py-2 border border-gray-300 rounded-lg text-sm focus:outline-none focus:ring-2 focus:ring-primary">
              <option value="rating">Highest Rated</option>
              <option value="reviews">Most Reviews</option>
              <option value="name">Name (A-Z)</option>
              <option value="location">Location</option>
            </select>
          </div>
        </div>

        <!-- Contractor Grid -->
        {filteredContractors.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {filteredContractors.map((contractor) => (
              <ContractorCard
                client:load
                id={contractor.id}
                name={contractor.name}
                category={contractor.category}
                description={contractor.description}
                location={contractor.location}
                rating={contractor.rating}
                reviewCount={contractor.reviewCount}
                imageUrl={contractor.imageUrl}
                verified={contractor.verified}
                specialties={contractor.specialties}
                yearsInBusiness={contractor.yearsInBusiness}
              />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="text-6xl mb-4">üîç</div>
            <h3 class="text-2xl font-heading font-bold text-charcoal mb-2">No contractors found</h3>
            <p class="text-slate mb-6">Try adjusting your search criteria or browse all contractors.</p>
            <a href="/directory">
              <Button client:load>View All Contractors</Button>
            </a>
          </div>
        )}

        <!-- Pagination -->
        <div class="mt-12 flex justify-center">
          <nav class="flex items-center space-x-2">
            <button class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors disabled:opacity-50 disabled:cursor-not-allowed" disabled>
              Previous
            </button>
            <button class="px-4 py-2 bg-primary text-white rounded-lg">1</button>
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">2</button>
            <button class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">3</button>
            <button class="px-3 py-2 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
              Next
            </button>
          </nav>
        </div>
      </div>
    </section>

    <!-- CTA Banner -->
    <section class="py-16 px-4 bg-gradient-to-r from-primary to-primary-600">
      <div class="container mx-auto max-w-4xl text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Are You a Contractor?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Join thousands of contractors connecting with customers through NCA
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button client:load size="lg" variant="outline" className="bg-white text-primary hover:bg-gray-100">
            Learn More
          </Button>
          <Button client:load size="lg" className="bg-charcoal text-white hover:bg-charcoal/90">
            List Your Business Free
          </Button>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
