---
export const prerender = false;

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ContractorCard } from '../components/ContractorCard';
import { Button } from '../components/ui/Button';
import { getAllContractors, getFilteredContractors } from '../lib/db-utils';

// Get query parameters from URL
const url = new URL(Astro.request.url);
const categoryParam = url.searchParams.get('category')?.toLowerCase() || '';
const locationParam = url.searchParams.get('location')?.toLowerCase() || '';

// Fetch contractors from database
let contractors: any[] = [];
let dbError: any = null;

try {
  if (categoryParam || locationParam) {
    contractors = await getFilteredContractors({
      category: categoryParam || undefined,
      location: locationParam || undefined,
    });
  } else {
    contractors = await getAllContractors();
  }
} catch (error) {
  console.error('Error fetching contractors:', error);
  dbError = error;
  contractors = [];
}

// Convert to display format
const contractorsForDisplay = contractors.map(c => ({
  id: c.id,
  name: c.businessName || c.name,
  category: c.category,
  description: c.description,
  location: `${c.city}, ${c.state}`,
  city: c.city,
  state: c.state,
  rating: parseFloat(c.rating),
  reviewCount: c.reviewCount,
  verified: c.verified,
  specialties: c.specialties || [],
  yearsInBusiness: c.yearsInBusiness || 0,
  imageUrl: c.imageUrl || undefined,
  logoUrl: c.logoUrl || undefined,
}));

// Get unique categories from database for filter
const allCategories = [
  'Insulation',
  'Roofing',
  'Electrical',
  'Plumbing',
  'HVAC',
  'Painting',
  'Remodeling',
  'Landscaping',
  'Flooring',
  'General Contractor',
  'Windows & Doors',
  'Foundation',
  'Pool Maintenance',
  'Concrete',
  'Masonry',
  'Carpentry',
];
---

<BaseLayout title="Contractor Directory - National Contractor Association">
  <Header />

  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-white border-b py-12 px-4">
      <div class="container mx-auto max-w-7xl">
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-charcoal mb-4">
          Find Trusted Contractors
        </h1>
        <p class="text-xl text-slate max-w-3xl">
          Browse our directory of verified, licensed contractors across all trades and locations.
        </p>
      </div>
    </section>

    <!-- Search & Filter Section -->
    <section class="py-8 px-4 bg-white border-b">
      <div class="container mx-auto max-w-7xl">
        <form action="/directory" method="get" class="flex flex-col lg:flex-row gap-4">
          <!-- Category Filter -->
          <div class="lg:w-64">
            <select
              name="category"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            >
              <option value="">All Categories</option>
              {allCategories.map(cat => (
                <option value={cat.toLowerCase()} selected={categoryParam === cat.toLowerCase()}>
                  {cat}
                </option>
              ))}
            </select>
          </div>

          <!-- Location Filter -->
          <div class="flex-1">
            <input
              type="text"
              name="location"
              placeholder="City, State, or ZIP"
              value={locationParam}
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
            />
          </div>

          <Button client:load size="lg" className="lg:w-auto" type="submit">
            Search
          </Button>

          {(categoryParam || locationParam) && (
            <a href="/directory">
              <Button client:load size="lg" variant="outline" className="lg:w-auto">
                Clear Filters
              </Button>
            </a>
          )}
        </form>
      </div>
    </section>

    <!-- Results Section -->
    <section class="py-12 px-4">
      <div class="container mx-auto max-w-7xl">
        <!-- Results Header -->
        <div class="flex items-center justify-between mb-8">
          <div>
            <h2 class="text-2xl font-heading font-bold text-charcoal mb-1">
              {categoryParam || locationParam ? 'Search Results' : 'All Contractors'}
            </h2>
            <p class="text-slate">
              Showing {contractorsForDisplay.length} contractor{contractorsForDisplay.length !== 1 ? 's' : ''}
              {categoryParam && <span> in "{categoryParam}"</span>}
              {locationParam && <span> near "{locationParam}"</span>}
            </p>
          </div>
        </div>

        <!-- Contractor Grid -->
        {contractorsForDisplay.length > 0 ? (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {contractorsForDisplay.map((contractor) => (
              <ContractorCard
                client:load
                id={contractor.id}
                name={contractor.name}
                category={contractor.category}
                description={contractor.description}
                location={contractor.location}
                city={contractor.city}
                state={contractor.state}
                rating={contractor.rating}
                reviewCount={contractor.reviewCount}
                imageUrl={contractor.imageUrl}
                logoUrl={contractor.logoUrl}
                verified={contractor.verified}
                specialties={contractor.specialties}
                yearsInBusiness={contractor.yearsInBusiness}
              />
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <div class="text-6xl mb-4">üîç</div>
            <h3 class="text-2xl font-heading font-bold text-charcoal mb-2">
              {dbError ? 'Unable to Load Contractors' : 'No contractors found'}
            </h3>
            <p class="text-slate mb-6">
              {dbError
                ? 'There was an error connecting to the database. Please try again later.'
                : categoryParam || locationParam
                  ? 'Try adjusting your search criteria or browse all contractors.'
                  : 'Be the first contractor to join our network!'}
            </p>
            {!dbError && (categoryParam || locationParam) && (
              <a href="/directory">
                <Button client:load>View All Contractors</Button>
              </a>
            )}
            {!dbError && !contractorsForDisplay.length && (
              <a href="/signup">
                <Button client:load>Create Your Profile</Button>
              </a>
            )}
          </div>
        )}
      </div>
    </section>

    <!-- CTA Banner -->
    <section class="py-16 px-4 bg-gradient-to-r from-primary to-primary-600">
      <div class="container mx-auto max-w-4xl text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Are You a Contractor?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Join our network and start appearing in search results instantly
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/signup">
            <Button client:load size="lg" className="bg-white text-primary hover:bg-gray-100">
              Create Your Profile - Free
            </Button>
          </a>
          <a href="/join">
            <Button client:load size="lg" variant="outline" className="bg-transparent border-white text-white hover:bg-white/10">
              Learn More About Membership
            </Button>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
