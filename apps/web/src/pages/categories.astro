---

<BaseLayout title="Service Categories - National Contractor Association">
  <Header />

  <main class="min-h-screen bg-gray-50">
    <!-- Page Header -->
    <section class="bg-gradient-to-b from-white to-gray-50 py-16 px-4">
      <div class="container mx-auto max-w-6xl text-center">
        <h1 class="text-4xl md:text-5xl font-heading font-bold text-charcoal mb-4">
          Browse by Category
        </h1>
        <p class="text-xl text-slate max-w-2xl mx-auto">
          Find specialized contractors for your specific project needs. From roofing to landscaping, we've got you covered.
        </p>
      </div>
    </section>

    <!-- Categories Grid -->
    <section class="py-12 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {categories.map((category) => (
            <a href={`/directory?category=${category.toLowerCase().replace(/\s+/g, '-')}`}>
              <Card className="h-full hover:shadow-xl transition-all duration-300 group cursor-pointer border-2 hover:border-primary">
                <CardContent className="p-8">
                  <div class="flex items-start space-x-4">
                    <div class="flex-shrink-0 w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                      <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={categoryIcons[category] || categoryIcons['General Contractor']} />
                      </svg>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-xl font-heading font-semibold text-charcoal mb-2 group-hover:text-primary transition-colors">
                        {category}
                      </h3>
                      <p class="text-sm text-slate">
                        Find licensed {category.toLowerCase()} contractors
                      </p>
                      <div class="mt-4 flex items-center text-primary text-sm font-medium">
                        Browse contractors
                        <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </div>
                  </div>
                </CardContent>
              </Card>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section class="py-16 px-4 bg-white">
      <div class="container mx-auto max-w-6xl">
        <h2 class="text-3xl font-heading font-bold text-center mb-12">
          How It Works
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-primary">1</span>
            </div>
            <h3 class="text-xl font-heading font-semibold mb-2">Choose Your Category</h3>
            <p class="text-slate">
              Select the type of service you need from our comprehensive list of categories.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-primary">2</span>
            </div>
            <h3 class="text-xl font-heading font-semibold mb-2">Browse Contractors</h3>
            <p class="text-slate">
              Review profiles, ratings, and specialties to find the perfect match for your project.
            </p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
              <span class="text-2xl font-bold text-primary">3</span>
            </div>
            <h3 class="text-xl font-heading font-semibold mb-2">Connect & Hire</h3>
            <p class="text-slate">
              Contact verified contractors directly and get started on your project with confidence.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
