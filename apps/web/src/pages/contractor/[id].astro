---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Button } from '../../components/ui/Button';
import { Card, CardHeader, CardTitle, CardContent } from '../../components/ui/Card';
import { getContractorById, getAllContractors } from '../../lib/db-utils';

// Generate static paths at build time
export async function getStaticPaths() {
  const contractors = await getAllContractors();
  return contractors.map((contractor) => ({
    params: { id: contractor.id },
  }));
}

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/directory');
}

// Fetch contractor data
let contractor: any = null;
try {
  contractor = await getContractorById(id);
} catch (error) {
  console.error('Error fetching contractor:', error);
}

if (!contractor) {
  return Astro.redirect('/directory');
}

const GOOGLE_MAPS_API_KEY = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;
---

<BaseLayout
  title={`${contractor.businessName || contractor.name} - National Contractor Association`}
  description={contractor.description}
>
  <Header />

  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-white border-b">
      <div class="container mx-auto max-w-7xl px-4 py-12">
        <div class="flex flex-col md:flex-row gap-8">
          <!-- Company Logo/Image -->
          <div class="md:w-1/3">
            <div class="relative aspect-square bg-gradient-to-br from-primary/10 to-primary/5 rounded-xl overflow-hidden">
              {contractor.imageUrl ? (
                <img
                  src={contractor.imageUrl}
                  alt={contractor.businessName || contractor.name}
                  class="w-full h-full object-cover"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <div class="text-9xl font-bold text-primary/20">
                    {(contractor.businessName || contractor.name).charAt(0)}
                  </div>
                </div>
              )}
            </div>
          </div>

          <!-- Company Info -->
          <div class="md:w-2/3 space-y-6">
            <div>
              <div class="flex items-start justify-between mb-4">
                <div>
                  <h1 class="text-4xl font-heading font-bold text-charcoal mb-2">
                    {contractor.businessName || contractor.name}
                  </h1>
                  <div class="flex items-center space-x-3 text-lg">
                    <span class="text-primary font-semibold">{contractor.category}</span>
                    {contractor.verified && (
                      <div class="flex items-center space-x-1 bg-primary/10 text-primary px-3 py-1 rounded-full">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                        </svg>
                        <span class="text-sm font-semibold">Verified</span>
                      </div>
                    )}
                  </div>
                </div>
              </div>

              <!-- Rating -->
              <div class="flex items-center space-x-3 mb-4">
                <div class="flex items-center">
                  {[...Array(5)].map((_, i) => (
                    <svg
                      class={`w-6 h-6 ${
                        i < Math.floor(parseFloat(contractor.rating)) ? 'text-yellow-400' : 'text-gray-300'
                      }`}
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  ))}
                </div>
                <span class="text-2xl font-bold">{parseFloat(contractor.rating).toFixed(1)}</span>
                <span class="text-slate">({contractor.reviewCount} reviews)</span>
              </div>

              <!-- Description -->
              <p class="text-lg text-slate mb-6">{contractor.description}</p>

              <!-- Quick Info -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                {contractor.yearsInBusiness && (
                  <div class="flex items-center space-x-2">
                    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-slate">{contractor.yearsInBusiness}+ years in business</span>
                  </div>
                )}
                <div class="flex items-center space-x-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span class="text-slate">{contractor.city}, {contractor.state} {contractor.zipCode}</span>
                </div>
              </div>

              <!-- Contact Buttons -->
              <div class="flex flex-wrap gap-4">
                {contractor.phone && (
                  <a href={`tel:${contractor.phone}`}>
                    <Button client:load size="lg">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                      Call Now
                    </Button>
                  </a>
                )}
                {contractor.email && (
                  <a href={`mailto:${contractor.email}`}>
                    <Button client:load variant="outline" size="lg">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                      Email
                    </Button>
                  </a>
                )}
                {contractor.website && (
                  <a href={contractor.website} target="_blank" rel="noopener noreferrer">
                    <Button client:load variant="outline" size="lg">
                      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                      </svg>
                      Visit Website
                    </Button>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <div class="container mx-auto max-w-7xl px-4 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Specialties -->
          {contractor.specialties && contractor.specialties.length > 0 && (
            <Card>
              <CardHeader>
                <CardTitle>Specialties</CardTitle>
              </CardHeader>
              <CardContent>
                <div class="flex flex-wrap gap-3">
                  {contractor.specialties.map((specialty: string) => (
                    <span class="px-4 py-2 bg-primary/10 text-primary rounded-lg font-medium">
                      {specialty}
                    </span>
                  ))}
                </div>
              </CardContent>
            </Card>
          )}

          <!-- About -->
          <Card>
            <CardHeader>
              <CardTitle>About {contractor.businessName || contractor.name}</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-slate leading-relaxed">
                {contractor.description}
              </p>
            </CardContent>
          </Card>

          <!-- Service Areas -->
          {contractor.serviceAreas && contractor.serviceAreas.length > 0 && (
            <Card>
              <CardHeader>
                <CardTitle>Service Areas</CardTitle>
              </CardHeader>
              <CardContent>
                <div class="flex flex-wrap gap-2">
                  {contractor.serviceAreas.map((area: string) => (
                    <span class="px-3 py-1 bg-gray-100 text-slate rounded-md text-sm">
                      {area}
                    </span>
                  ))}
                </div>
              </CardContent>
            </Card>
          )}
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Contact Card -->
          <Card>
            <CardHeader>
              <CardTitle>Contact Information</CardTitle>
            </CardHeader>
            <CardContent className="space-y-4">
              {contractor.phone && (
                <div>
                  <div class="text-sm text-slate mb-1">Phone</div>
                  <a href={`tel:${contractor.phone}`} class="text-primary font-medium hover:underline">
                    {contractor.phone}
                  </a>
                </div>
              )}
              {contractor.email && (
                <div>
                  <div class="text-sm text-slate mb-1">Email</div>
                  <a href={`mailto:${contractor.email}`} class="text-primary font-medium hover:underline break-all">
                    {contractor.email}
                  </a>
                </div>
              )}
              {contractor.address && (
                <div>
                  <div class="text-sm text-slate mb-1">Address</div>
                  <div class="text-charcoal">
                    {contractor.address}<br />
                    {contractor.city}, {contractor.state} {contractor.zipCode}
                  </div>
                </div>
              )}
              {contractor.website && (
                <div>
                  <div class="text-sm text-slate mb-1">Website</div>
                  <a href={contractor.website} target="_blank" rel="noopener noreferrer" class="text-primary font-medium hover:underline break-all">
                    {contractor.website}
                  </a>
                </div>
              )}
            </CardContent>
          </Card>

          <!-- Business Details -->
          <Card>
            <CardHeader>
              <CardTitle>Business Details</CardTitle>
            </CardHeader>
            <CardContent className="space-y-3">
              <div class="flex justify-between items-center">
                <span class="text-slate">Status</span>
                <span class="px-3 py-1 bg-green-100 text-green-700 rounded-full text-sm font-medium capitalize">
                  {contractor.status}
                </span>
              </div>
              {contractor.licenseNumber && (
                <div class="flex justify-between items-center">
                  <span class="text-slate">License</span>
                  <span class="text-charcoal font-medium">{contractor.licenseNumber}</span>
                </div>
              )}
              {contractor.insuranceVerified && (
                <div class="flex justify-between items-center">
                  <span class="text-slate">Insurance</span>
                  <span class="text-green-600 font-medium flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    Verified
                  </span>
                </div>
              )}
            </CardContent>
          </Card>
        </div>
      </div>
    </div>

    <!-- CTA Section -->
    <section class="py-16 px-4 bg-gradient-to-r from-primary to-primary-600">
      <div class="container mx-auto max-w-4xl text-center text-white">
        <h2 class="text-3xl md:text-4xl font-heading font-bold mb-4">
          Ready to get started?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Contact {contractor.businessName || contractor.name} today for a free consultation
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          {contractor.phone && (
            <a href={`tel:${contractor.phone}`}>
              <Button client:load size="lg" className="bg-white text-primary hover:bg-gray-100">
                Call Now
              </Button>
            </a>
          )}
          <a href="/directory">
            <Button client:load size="lg" variant="outline" className="bg-transparent border-white text-white hover:bg-white/10">
              Browse More Contractors
            </Button>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
