---
export const prerender = false; // Server-render for real-time contractor data

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/Button';
import { Card, CardContent } from '../components/ui/Card';
import { ContractorCard } from '../components/ContractorCard';
import { ContractorMap } from '../components/ContractorMap';
import { InteractiveContractorMap } from '../components/InteractiveContractorMap';
import { getAllContractors, getFeaturedContractors, getContractorsCount } from '../lib/db-utils';

// Fetch real data from database
let allContractors: any[] = [];
let featuredContractors: any[] = [];
let contractorsCount = 0;

try {
  [allContractors, featuredContractors, contractorsCount] = await Promise.all([
    getAllContractors(),
    getFeaturedContractors(3),
    getContractorsCount(),
  ]);
} catch (error) {
  console.error('Error fetching contractors:', error);
  // Fallback: use empty arrays
  allContractors = [];
  featuredContractors = [];
  contractorsCount = 0;
}

// Convert database contractors to format expected by components
const contractorsForMap = allContractors
  .filter(c => c.latitude && c.longitude)
  .map(c => ({
    id: c.id,
    name: c.businessName || c.name,
    category: c.category,
    description: c.description,
    location: `${c.city}, ${c.state}`,
    coordinates: {
      lat: parseFloat(c.latitude!),
      lng: parseFloat(c.longitude!),
    },
    rating: parseFloat(c.rating),
    reviewCount: c.reviewCount,
    verified: c.verified,
    specialties: c.specialties || [],
    yearsInBusiness: c.yearsInBusiness || 0,
    phone: c.phone || undefined,
    email: c.email,
    website: c.website || undefined,
    imageUrl: c.imageUrl || undefined,
  }));

const featuredForDisplay = featuredContractors.map(c => ({
  id: c.id,
  name: c.businessName || c.name,
  category: c.category,
  description: c.description,
  location: `${c.city}, ${c.state}`,
  rating: parseFloat(c.rating),
  reviewCount: c.reviewCount,
  verified: c.verified,
  specialties: c.specialties || [],
  yearsInBusiness: c.yearsInBusiness || 0,
  imageUrl: c.imageUrl || undefined,
}));

const GOOGLE_MAPS_API_KEY = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;

if (!GOOGLE_MAPS_API_KEY) {
  console.error('Google Maps API key is not configured. Please set PUBLIC_GOOGLE_MAPS_API_KEY environment variable.');
}
---

<BaseLayout>
  <Header />
  <main class="min-h-screen">
    <!-- Hero Section with Full Screen Map -->
    <section class="relative h-screen w-full">
      <!-- Map Background -->
      <div class="absolute inset-0 w-full h-full">
        {GOOGLE_MAPS_API_KEY && contractorsForMap.length > 0 ? (
          <ContractorMap client:load contractors={contractorsForMap} apiKey={GOOGLE_MAPS_API_KEY} />
        ) : (
          <div class="w-full h-full bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
            <p class="text-slate-600">
              {!GOOGLE_MAPS_API_KEY ? 'Map loading...' : 'No contractors with locations yet'}
            </p>
          </div>
        )}
      </div>

      <!-- Overlay Content -->
      <div class="absolute inset-0 flex items-center justify-center px-4">
        <div class="container mx-auto max-w-5xl">
          <div class="text-center space-y-6 bg-white/10 backdrop-blur-md border border-white/20 p-8 md:p-12 rounded-3xl shadow-2xl">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-charcoal drop-shadow-lg">
              Find <span class="text-orange-500">Trusted Contractors</span>
              <br />Near You
            </h1>
            <p class="text-lg md:text-xl text-charcoal/90 max-w-2xl mx-auto drop-shadow-md">
              Connect with verified, licensed contractors across the nation. Browse by trade, location, and specialty.
            </p>

            <!-- Search Bar -->
            <div class="max-w-4xl mx-auto mt-8">
              <form action="/directory" method="get" class="flex flex-col sm:flex-row gap-3 bg-white/95 backdrop-blur-sm p-3 sm:p-4 rounded-2xl shadow-lg">
                <input
                  type="text"
                  name="category"
                  placeholder="What service do you need?"
                  class="flex-1 px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary text-base"
                />
                <input
                  type="text"
                  name="location"
                  placeholder="City, State, or ZIP"
                  class="flex-1 px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary text-base"
                />
                <button type="submit" class="px-6 py-3 bg-primary text-white rounded-lg hover:bg-primary/90 transition-colors font-medium text-base whitespace-nowrap">
                  Search
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Categories -->
    <section class="py-16 px-4">
      <div class="container mx-auto max-w-6xl">
        <h2 class="text-3xl font-heading font-bold text-center mb-12">
          Popular Services
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {['Insulation', 'Roofing', 'Electrical', 'Plumbing', 'HVAC', 'Painting', 'Remodeling', 'Landscaping'].map((service) => (
            <a href={`/directory?category=${service.toLowerCase()}`}>
              <Card className="hover:shadow-lg transition-shadow cursor-pointer group">
                <CardContent className="p-6 text-center">
                  <h3 class="font-semibold text-lg group-hover:text-primary transition-colors">{service}</h3>
                </CardContent>
              </Card>
            </a>
          ))}
        </div>
        <div class="text-center mt-8">
          <a href="/categories">
            <Button client:load variant="outline" size="lg">
              View All Categories
            </Button>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Contractors -->
    {featuredForDisplay.length > 0 ? (
      <section class="py-16 px-4 bg-white">
        <div class="container mx-auto max-w-6xl">
          <div class="text-center mb-12">
            <h2 class="text-3xl font-heading font-bold text-charcoal mb-4">
              Featured Contractors
            </h2>
            <p class="text-xl text-slate">
              Meet our top-rated professionals ready to help with your next project
            </p>
          </div>
          <div class="grid md:grid-cols-3 gap-6">
            {featuredForDisplay.map((contractor) => (
              <ContractorCard
                client:load
                id={contractor.id}
                name={contractor.name}
                category={contractor.category}
                description={contractor.description}
                location={contractor.location}
                rating={contractor.rating}
                reviewCount={contractor.reviewCount}
                imageUrl={contractor.imageUrl}
                verified={contractor.verified}
                specialties={contractor.specialties}
                yearsInBusiness={contractor.yearsInBusiness}
              />
            ))}
          </div>
          <div class="text-center mt-8">
            <a href="/directory">
              <Button client:load size="lg">
                Browse All Contractors
              </Button>
            </a>
          </div>
        </div>
      </section>
    ) : (
      <section class="py-16 px-4 bg-white">
        <div class="container mx-auto max-w-6xl text-center">
          <h2 class="text-3xl font-heading font-bold text-charcoal mb-4">
            Be the First Contractor in Our Network
          </h2>
          <p class="text-xl text-slate mb-8">
            Join now and get featured placement as an early member
          </p>
          <a href="/signup">
            <Button client:load size="lg">
              Create Your Profile
            </Button>
          </a>
        </div>
      </section>
    )}

    <!-- Interactive Map Section -->
    {contractorsForMap.length > 0 && (
      <section class="py-16 px-4 bg-gray-50">
        <div class="container mx-auto max-w-7xl">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-heading font-bold text-charcoal mb-4">
              Explore Our Contractor Network
            </h2>
            <p class="text-xl text-slate max-w-3xl mx-auto">
              Click on any marker to view contractor details and profiles. Our network updates in real-time as new contractors join.
            </p>
          </div>
          {GOOGLE_MAPS_API_KEY ? (
            <InteractiveContractorMap client:load contractors={contractorsForMap} apiKey={GOOGLE_MAPS_API_KEY} />
          ) : (
            <div class="bg-white rounded-xl shadow-lg p-12 text-center">
              <p class="text-slate-600">Interactive map is currently unavailable.</p>
            </div>
          )}
          <div class="mt-8 text-center">
            <p class="text-sm text-slate mb-4">
              Showing {contractorsForMap.length} contractors across the United States
            </p>
            <a href="/directory">
              <Button client:load size="lg">
                View Full Directory
              </Button>
            </a>
          </div>
        </div>
      </section>
    )}

    <!-- Trust Indicators -->
    <section class="py-16 px-4 bg-white">
      <div class="container mx-auto max-w-6xl">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">{contractorsCount}+</div>
            <div class="text-slate">Active Contractors</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">16+</div>
            <div class="text-slate">Service Categories</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">100%</div>
            <div class="text-slate">Real-Time Updates</div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-4 bg-charcoal text-white">
      <div class="container mx-auto max-w-4xl text-center space-y-6">
        <h2 class="text-4xl font-heading font-bold">
          Are You a Contractor?
        </h2>
        <p class="text-xl text-gray-300">
          Join our network and connect with customers looking for your services. Appear on the map instantly!
        </p>
        <div class="flex gap-4 justify-center flex-wrap">
          <a href="/signup">
            <Button client:load size="lg" variant="default">
              Create Profile - It's Free
            </Button>
          </a>
          <a href="/join">
            <Button client:load size="lg" variant="outline" className="bg-transparent border-white text-white hover:bg-white hover:text-charcoal">
              Learn More
            </Button>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
