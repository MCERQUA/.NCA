---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Button } from '../components/ui/Button';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '../components/ui/Card';
import { ContractorCard } from '../components/ContractorCard';
import { ContractorMap } from '../components/ContractorMap';
import { mockContractors } from '../data/contractors';

// Get featured contractors (top 3 by rating)
const featuredContractors = mockContractors
  .sort((a, b) => b.rating - a.rating)
  .slice(0, 3);

const GOOGLE_MAPS_API_KEY = import.meta.env.PUBLIC_GOOGLE_MAPS_API_KEY;

if (!GOOGLE_MAPS_API_KEY) {
  console.error('Google Maps API key is not configured. Please set PUBLIC_GOOGLE_MAPS_API_KEY environment variable.');
}
---

<BaseLayout>
  <Header />
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-b from-white to-gray-50 py-20 px-4">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center space-y-6">
          <h1 class="text-5xl md:text-6xl font-heading font-bold text-charcoal">
            Find <span class="text-primary">Trusted Contractors</span>
            <br />Near You
          </h1>
          <p class="text-xl text-slate max-w-2xl mx-auto">
            Connect with verified, licensed contractors across the nation. Browse by trade, location, and specialty.
          </p>

          <!-- Search Bar -->
          <div class="max-w-3xl mx-auto mt-8">
            <div class="flex flex-col md:flex-row gap-4 bg-white p-4 rounded-2xl shadow-lg">
              <input
                type="text"
                placeholder="What service do you need?"
                class="flex-1 px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              />
              <input
                type="text"
                placeholder="City, State, or ZIP"
                class="flex-1 px-4 py-3 border border-gray-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary"
              />
              <Button client:load size="lg" className="md:w-auto w-full">
                Search Contractors
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Service Categories -->
    <section class="py-16 px-4">
      <div class="container mx-auto max-w-6xl">
        <h2 class="text-3xl font-heading font-bold text-center mb-12">
          Popular Services
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {['Roofing', 'Electrical', 'Plumbing', 'HVAC', 'Painting', 'Remodeling', 'Landscaping', 'Flooring'].map((service) => (
            <a href={`/directory?category=${service.toLowerCase()}`}>
              <Card className="hover:shadow-lg transition-shadow cursor-pointer group">
                <CardContent className="p-6 text-center">
                  <h3 class="font-semibold text-lg group-hover:text-primary transition-colors">{service}</h3>
                </CardContent>
              </Card>
            </a>
          ))}
        </div>
        <div class="text-center mt-8">
          <a href="/categories">
            <Button client:load variant="outline" size="lg">
              View All Categories
            </Button>
          </a>
        </div>
      </div>
    </section>

    <!-- Featured Contractors -->
    <section class="py-16 px-4 bg-white">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold text-charcoal mb-4">
            Featured Contractors
          </h2>
          <p class="text-xl text-slate">
            Meet our top-rated professionals ready to help with your next project
          </p>
        </div>
        <div class="grid md:grid-cols-3 gap-6">
          {featuredContractors.map((contractor) => (
            <ContractorCard
              client:load
              id={contractor.id}
              name={contractor.name}
              category={contractor.category}
              description={contractor.description}
              location={contractor.location}
              rating={contractor.rating}
              reviewCount={contractor.reviewCount}
              imageUrl={contractor.imageUrl}
              verified={contractor.verified}
              specialties={contractor.specialties}
              yearsInBusiness={contractor.yearsInBusiness}
            />
          ))}
        </div>
        <div class="text-center mt-8">
          <a href="/directory">
            <Button client:load size="lg">
              Browse All Contractors
            </Button>
          </a>
        </div>
      </div>
    </section>

    <!-- Contractor Map -->
    <section class="py-16 px-4 bg-gray-50">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-heading font-bold text-charcoal mb-4">
            Find Contractors Near You
          </h2>
          <p class="text-xl text-slate">
            Explore our network of verified contractors across the nation
          </p>
        </div>
        {GOOGLE_MAPS_API_KEY ? (
          <ContractorMap client:load contractors={mockContractors} apiKey={GOOGLE_MAPS_API_KEY} />
        ) : (
          <div class="bg-white rounded-xl shadow-lg p-12 text-center">
            <p class="text-slate-600">Map feature is currently unavailable. Please check back later.</p>
          </div>
        )}
      </div>
    </section>

    <!-- Trust Indicators -->
    <section class="py-16 px-4 bg-white">
      <div class="container mx-auto max-w-6xl">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">10,000+</div>
            <div class="text-slate">Verified Contractors</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">50+</div>
            <div class="text-slate">Service Categories</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">4.8â˜…</div>
            <div class="text-slate">Average Rating</div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-4 bg-charcoal text-white">
      <div class="container mx-auto max-w-4xl text-center space-y-6">
        <h2 class="text-4xl font-heading font-bold">
          Are You a Contractor?
        </h2>
        <p class="text-xl text-gray-300">
          Join our network and connect with customers looking for your services.
        </p>
        <div class="flex gap-4 justify-center flex-wrap">
          <a href="/join">
            <Button client:load size="lg" variant="default">
              Join Now
            </Button>
          </a>
          <a href="/join">
            <Button client:load size="lg" variant="outline" className="bg-transparent border-white text-white hover:bg-white hover:text-charcoal">
              Learn More
            </Button>
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
